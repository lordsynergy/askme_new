<div class="container">
  <h2 class="title-lg mb">Вопросы</h2>

  <% @question.each do |question| %>
    <p class="mb-sm <%='hidden_text' if question.hidden? %>"><%= link_to "Вопрос #{question.id}", "/questions/#{question.id}"%></p>
  <% end %>

  <p class="mt">
    <%= link_to "Создать новый вопрос", new_question_path, class: 'button button-main'%>
  </p>
</div>